<Window x:Class="NAMDNHE176906WPF.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAMDNHE176906WPF"
        mc:Ignorable="d"
        Title="ResetPassword" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <!-- New Password Label -->
            <TextBlock Text="New Password:" Margin="0,0,0,10" FontSize="14"/>

            <!-- New Password TextBox -->
            <PasswordBox x:Name="txtNewPassword" Width="300" Height="30" Margin="0,0,0,20"/>

           
            <TextBlock Text="Confirm Password:" Margin="0,0,0,10" FontSize="14"/>

           
            <PasswordBox x:Name="txtConfirmPassword" Width="300" Height="30" Margin="0,0,0,20"/>

            
            <Button Content="Reset Password" Width="300" Height="40" Click="Button_Click" />

            
            <TextBlock x:Name="txtStatus" Text="" Margin="0,10,0,0" Foreground="Red" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
